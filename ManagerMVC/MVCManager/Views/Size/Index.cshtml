@{
    ViewData["Title"] = "Size";
}

<div class="container mx-auto p-6">
    <h1 class="text-2xl font-semibold mb-4">Mantenimiento de Tallas</h1>

    <!-- Estilos para el interruptor deslizable -->
    <style>
        .switch {
            position: relative;
            display: inline-block;
            width: 60px;
            height: 34px;
        }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
        }

        .slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: .4s;
        }

        input:checked + .slider {
            background-color: #2196F3;
        }

        input:checked + .slider:before {
            transform: translateX(26px);
        }

        .slider.round {
            border-radius: 34px;
        }

        .slider.round:before {
            border-radius: 50%;
        }
    </style>

    <div class="p-4 bg-white rounded-lg shadow-md">
        <h2 class="text-xl font-semibold mb-4">Lista de Tallas</h2>

        <!-- Tabla de Size -->
        <table class="min-w-full divide-y divide-gray-200 text-center rounded-lg shadow-sm">
            <thead class="bg-gray-100">
                <tr>
                    <th class="px-2 py-2">idSize</th>
                    <th class="px-2 py-2">Description</th>
                    <th class="px-2 py-2">Active</th>
                    <th class="px-2 py-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Primer registro -->
                <tr>
                    <td class="px-2 py-2">1</td>
                    <td class="px-2 py-2">Small</td>
                    <td class="px-2 py-2">
                        <label class="switch">
                            <input type="checkbox" checked>
                            <span class="slider round"></span>
                        </label>
                    </td>
                    <td class="px-2 py-2">
                        <button class="text-blue-500 hover:text-blue-700">Edit</button>
                        <button class="text-red-500 hover:text-red-700">Delete</button>
                    </td>
                </tr>
                <!-- Segundo registro -->
                <tr>
                    <td class="px-2 py-2">2</td>
                    <td class="px-2 py-2">Medium</td>
                    <td class="px-2 py-2">
                        <label class="switch">
                            <input type="checkbox">
                            <span class="slider round"></span>
                        </label>
                    </td>
                    <td class="px-2 py-2">
                        <button class="text-blue-500 hover:text-blue-700">Edit</button>
                        <button class="text-red-500 hover:text-red-700">Delete</button>
                    </td>
                </tr>
                <!-- Tercer registro -->
                <tr>
                    <td class="px-2 py-2">3</td>
                    <td class="px-2 py-2">Large</td>
                    <td class="px-2 py-2">
                        <label class="switch">
                            <input type="checkbox" checked>
                            <span class="slider round"></span>
                        </label>
                    </td>
                    <td class="px-2 py-2">
                        <button class="text-blue-500 hover:text-blue-700">Edit</button>
                        <button class="text-red-500 hover:text-red-700">Delete</button>
                    </td>
                </tr>
                <!-- Puedes añadir más registros aquí -->
            </tbody>
        </table>
    </div>
</div>
