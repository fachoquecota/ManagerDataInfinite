<div class="container mx-auto mt-10 p-5 max-w-4xl">
    <div class="p-6 bg-white shadow-md rounded-md">

        <h2 class="text-2xl font-bold mb-5">Reporte de Ventas</h2>

        <!-- Filtros -->
        <div class="mb-4">
            <label for="fechaInicio">Fecha Inicio:</label>
            <input type="date" id="fechaInicio" class="shadow border rounded py-2 px-3">

            <label for="fechaFin">Fecha Fin:</label>
            <input type="date" id="fechaFin" class="shadow border rounded py-2 px-3">

            <label for="tipoVenta">Tipo de Venta:</label>
@*          <select id="tipoVenta" class="shadow border rounded py-2 px-3">
                <option value="interna">Interna</option>
                <option value="cliente">Cliente</option>
            </select> *@
            <!-- Categoría -->
            <div class="relative mb-4 w-1/4 inline-block">
                <label for="categoriaCombobox" class="block text-sm font-medium text-gray-600">Categoría:</label>
                <select id="categoriaCombobox" class="mt-1 p-2 rounded-md border border-green-300 shadow-sm w-full">
                    <option value="">>-- Seleccionar --< </option>
                    @foreach (var categoria in ViewBag.Categoria)
                    {
                        <option value="@categoria.Value">@categoria.Text</option>
                    }
                </select>
            </div>
            <div class="relative mb-4 w-1/4 inline-block">
                <label for="categoriaCombobox" class="block text-sm font-medium text-gray-600">Genero:</label>
                <select id="categoriaCombobox" class="mt-1 p-2 rounded-md border border-green-300 shadow-sm w-full">
                    <option value="">>-- Seleccionar --< </option>
                    @foreach (var genero in ViewBag.Genero)
                    {
                        <option value="@genero.Value">@genero.Text</option>
                    }
                </select>
            </div>
            <button onclick="filtrarVentas()" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Filtrar</button>
        </div>

        <!-- Tabla de Ventas -->
        <table class="min-w-full bg-white" id="ventasTable">
            <thead>
                <tr>
                    <th class="py-2 px-4 border-b border-gray-200 bg-gray-100">ID Venta</th>
                    <th class="py-2 px-4 border-b border-gray-200 bg-gray-100">Fecha</th>
                    <th class="py-2 px-4 border-b border-gray-200 bg-gray-100">Tipo</th>
                    <!-- Otras columnas de ejemplo -->
                    <th class="py-2 px-4 border-b border-gray-200 bg-gray-100">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <!-- Aquí se llenarían las filas de la tabla con los datos de las ventas -->
            </tbody>
        </table>
    </div>
</div>

