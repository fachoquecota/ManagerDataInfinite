@model List<ReporteventasModel>

@{
    ViewBag.Title = "Reporte";
}

<div class="container mx-auto mt-10 p-5 max-w-4xl">
    <div class="p-6 bg-white shadow-md rounded-md">

        <h2 class="text-2xl font-bold mb-5">Reporte de Ventas</h2>

        <!-- Filtros -->
        <div class="mb-4">
            <label for="fechaInicio">Fecha Inicio:</label>
            <input type="date" id="fechaInicio" class="mt-1 p-2 rounded-md border border-green-300 shadow-sm">

            <label for="fechaFin">Fecha Fin:</label>
            <input type="date" id="fechaFin" class="mt-1 p-2 rounded-md border border-green-300 shadow-sm">


            <!-- Categoría -->
            <div class="relative mb-4 w-1/4 inline-block">
                <label for="transporteCombobox" class="block text-sm font-medium text-gray-600">Empresa Transporte:</label>
                <select id="transporteCombobox" class="mt-1 p-2 rounded-md border border-green-300 shadow-sm w-full">
                    <option value="">Todas Emp. Transporte</option>
                    @foreach (var transporte in ViewBag.Transporte)
                    {
                        <option value="@transporte.Value">@transporte.Text</option>
                    }
                </select>
            </div>

            <button onclick="filtrarVentas()" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Filtrar</button>
        </div>

        <!-- Tabla de Ventas -->
        <table class="min-w-full bg-white" id="ventasTable">
            <thead>
                <tr>
                    <th class="py-2 px-4 border-b border-gray-200 bg-gray-100">ID Venta</th>
                    <th class="py-2 px-4 border-b border-gray-200 bg-gray-100">ID Cliente</th>
                    <th class="py-2 px-4 border-b border-gray-200 bg-gray-100">Nombres</th>
                    <th class="py-2 px-4 border-b border-gray-200 bg-gray-100">Tipo de Pago</th>
                    <th class="py-2 px-4 border-b border-gray-200 bg-gray-100">Empresa Transporte</th>
                    <th class="py-2 px-4 border-b border-gray-200 bg-gray-100">Total</th>
                    <th class="py-2 px-4 border-b border-gray-200 bg-gray-100">Fecha de Venta</th>
                    <th style="display: none;">ID Empresa</th>

                    <th class="py-2 px-4 border-b border-gray-200 bg-gray-100">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var venta in Model)
                {
                    <tr>
                        <td class="border-b border-gray-200 px-4 py-2">@venta.idVenta</td>
                        <td class="border-b border-gray-200 px-4 py-2">@venta.idCliente</td>
                        <td class="border-b border-gray-200 px-4 py-2">@venta.nombres</td>
                        <td class="border-b border-gray-200 px-4 py-2">@venta.tipoPago</td>
                        <td class="border-b border-gray-200 px-4 py-2">@venta.empresaTransporte</td>
                        <td class="border-b border-gray-200 px-4 py-2">@venta.total</td>
                        <td class="border-b border-gray-200 px-4 py-2">@venta.fechaVenta</td>
                        <td style="display: none;">@venta.idEmpresa</td>

                        <td class="border-b border-gray-200 px-4 py-2">
                            <!-- Botones o enlaces para acciones específicas (por ejemplo, editar, eliminar) -->
                            <button onclick="abrirDetalleVenta(@venta.idVenta)" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 rounded">Ver Detalle</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<!-- Modal para detalles de venta -->
<div class="fixed z-10 inset-0 overflow-y-auto hidden" aria-labelledby="modal-detalle-venta" role="dialog" aria-modal="true" id="detalleVentaModal">
    <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
        <!-- Fondo semitransparente del modal -->
        <div class="fixed inset-0 transition-opacity" aria-hidden="true">
            <div class="absolute inset-0 bg-gray-500 opacity-75"></div>
        </div>

        <!-- Contenido del modal -->
        <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full" role="dialog" aria-modal="true" aria-labelledby="modal-headline">
            <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                <div class="sm:flex sm:items-start">
                    <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                        <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-headline">Detalles de Venta</h3>
                        <div class="mt-2">
                            <!-- Información de la venta -->
                            <p><strong>Id Venta Detalle:</strong> <span id="ventaId"></span></p>
                            <p><strong>Fecha Venta:</strong> <span id="ventaFecha"></span></p>

                            <!-- Tabla para detalles de productos -->
                            <table class="min-w-full leading-normal mt-4">
                                <thead>
                                    <tr>
                                        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Producto</th>
                                        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Cantidad</th>
                                        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Precio Unitario</th>
                                    </tr>
                                </thead>
                                <tbody id="detalleVentaProductos">
                                    <!-- Los productos se agregarán aquí dinámicamente -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Botones del modal -->
            <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                <button type="button" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm" onclick="cerrarDetalleVenta()">
                    Cerrar
                </button>
            </div>
        </div>
    </div>
</div>


<script>
    function abrirDetalleVenta(idVenta) {
        // Obtener los detalles de la venta de alguna manera, por ejemplo, a través de una solicitud AJAX.
        // A continuación se muestra un ejemplo de cómo actualizar los campos del modal.
        document.getElementById("ventaId").textContent = idVenta;
        // Suponiendo que obtengas un array de productos para esta venta:
        var productos = []; // Reemplazar con los datos reales obtenidos

        // Limpiar la tabla existente
        var tbody = document.getElementById("detalleVentaProductos");
        tbody.innerHTML = '';

        // Agregar cada producto a la tabla
        productos.forEach(function(producto) {
            var tr = document.createElement("tr");
            tr.innerHTML = `<td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">${producto.nombre}</td>
                            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">${producto.cantidad}</td>
                            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">${producto.precioUnitario}</td>`;
            tbody.appendChild(tr);
        });

        // Mostrar el modal
        document.getElementById("detalleVentaModal").classList.remove("hidden");
    }
    function cerrarDetalleVenta() {
        document.getElementById("detalleVentaModal").classList.add("hidden");
    }

    function filtrarVentas() {
        var idEmpresaSeleccionada = document.getElementById("transporteCombobox").value;
        var fechaInicio = document.getElementById("fechaInicio").value ? new Date(document.getElementById("fechaInicio").value) : null;
        var fechaFin = document.getElementById("fechaFin").value ? new Date(document.getElementById("fechaFin").value) : null;

        var filas = document.getElementById("ventasTable").getElementsByTagName("tbody")[0].getElementsByTagName("tr");

        for (var i = 0; i < filas.length; i++) {
            var idEmpresa = filas[i].querySelector("td:nth-child(8)").textContent.trim(); // Asumiendo que el ID de la empresa está en la columna oculta
            var fechaVentaTexto = filas[i].querySelector("td:nth-child(6)").textContent.trim(); // Asumiendo que la fecha está en la sexta columna
            var fechaVenta = fechaVentaTexto ? new Date(fechaVentaTexto.split(" ")[0]) : null; // Separando la hora si está presente

            var mostrarFila = true;

            if (idEmpresaSeleccionada && idEmpresaSeleccionada !== "" && idEmpresa !== idEmpresaSeleccionada) {
                mostrarFila = false;
            }

            if (fechaInicio && (!fechaVenta || fechaVenta < fechaInicio)) {
                mostrarFila = false;
            }

            if (fechaFin && (!fechaVenta || fechaVenta > fechaFin)) {
                mostrarFila = false;
            }

            filas[i].style.display = mostrarFila ? "" : "none";
        }
    }




</script>
